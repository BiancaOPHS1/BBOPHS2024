num_1  = int(input("enter one number:"))
num_2 = int(input("enter your second number"))

addition_total  = num_1 + num_2
times_total = num_1 * num_2 

print(addition_total)
print(times_total)






distance = int(input("enter the distance travelled in metres")) 
time = int(input("enter the time it took in seconds"))

a_speed = distance/time
print(a_speed , "m/s")





