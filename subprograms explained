def adding(num1,num2):
  total = num1 + num2
  print(total)
  
def subtraction(num1,num2):
  total = num1 - num2
  print(total)

def multiplication(num1, num2):
  total = num1 * num2
  print(total)
  
def division(num1, num2):
  total = num1 / num2
  print(total)
  
print("1 for add")
print("2 for subtraction")
print("3 for multiplication")
print("4 for division")

select = int(input("1, 2, 3 or 4"))

if select == 1:
  num1 = int(input("enter a number:"))
  num2 = int(input("enter another number"))
  adding(num1,num2)

elif select == 2:
  num1 = int(input("enter a number:"))
  num2 = int(input("enter another number"))
  subtraction(num1,num2)

elif select == 3:
  num1 = int(input("enter a number:"))
  num2 = int(input("enter another number"))
  multiplication(num1,num2)
  
elif select == 4:
  num1 = int(input("enter a number:"))
  num2 = int(input("enter another number"))
  division(num1,num2)



  





def division(num1, num2):
  total = num1 / num2
  print(num1 , "/" ,num2 , "=", total)


def menu():  
  print("1 for add")
  print("2 for subtraction")
  print("3 for multiplication")
  print("4 for division")

  select = int(input("1, 2, 3 or 4"))
  
  if select == 1:
    num1 = int(input("enter a number:"))
    num2 = int(input("enter another number"))
    adding(num1,num2)
    menu()
  
  elif select == 2:
    num1 = int(input("enter a number:"))
    num2 = int(input("enter another number"))
    subtraction(num1,num2)
    menu()
  
  elif select == 3:
    num1 = int(input("enter a number:"))
    num2 = int(input("enter another number"))
    multiplication(num1,num2)
    menu()
  elif select == 4:
    num1 = int(input("enter a number:"))
    num2 = int(input("enter another number"))
    division(num1,num2)
    menu()
    


menu()









