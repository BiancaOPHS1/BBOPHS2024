user = str(input("enter a sentence"))
word = str(input("which word in the sentence above do you wish to change"))
new_word = str(input("what word would you like to change it to?"))

if word != word:
  print(new_word)

print(user.replace(word , new_word))
  
  
  
  
  
  
  
  
  
  
